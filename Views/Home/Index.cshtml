@{
    ViewData["Title"] = "Index";
}

@foreach (var item in ViewBag.Series)
{
    <div class="card" style="width: 30rem;">
    <img src="@item.ImagenSerie" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">@item.Nombre</h5>
            <button type="button" class="btn btn-primary" data-toggle="modal" 
            data-target="#Modal" onclick="MostrarActores(@item.IdSerie)">Ver Info Actores</button>
            <button type="button" class="btn btn-primary" data-toggle="modal" 
            data-target="#Modal"  onclick="MostrarTemporadas(@item.IdSerie)"> Ver Info Temporadas</button>
            <button type="button" class="btn btn-primary" data-toggle="modal" 
            data-target="#Modal" onclick="MostrarSeries(@item.IdSerie)"> Ver Info Serie</button>
        </div>
    </div>
}
<div id="Modal" class="modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="titulo"></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div id="texto1"></div>
        <div id="texto2"></div>
        <div id="texto3"></div>
        <img class="img-fluid" id="imagen1">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>
@section Scripts{
	   <script src="~/js/site.js" asp-append-version="true"></script>
    }
