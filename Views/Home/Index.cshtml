@{
    ViewData["Title"] = "Index";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style src="wwwroot\css\site.css"></style>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
</head>
<body>
@foreach (var item in ViewBag.Series)
{
    <div class="card" style="width: 30rem;">
    <img src="@item.ImagenSerie" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">@item.Nombre</h5>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#Modal" onclick="MostrarActores(@item.IdSerie)"> Ver Info Actores</button>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#Modal" onclick="MostrarTemporadas(@item.IdSerie)"> Ver Info Temporadas</button>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#Modal" onclick="MostrarSeries(@item.IdSerie)"> Ver Info Serie</button>
        </div>
    </div>
}
<div class="modal-dialog modal-dialog-centered" id="Modal" tabindex="-1" aria-labelledy="exampleModalLabel" aria-hidden="true">
   <div class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="titulo"></h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
        </div>
        </div>
    </div>
    </div>
</div>
</body>